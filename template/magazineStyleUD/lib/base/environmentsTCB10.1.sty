\ifthenelse{\equal{\platformtype}{pc}}
{ \newtcbtheorem[number within=chapter]{mytheo}{Teorema}
	{mytheoStyle}{theo}
	\newtcbtheorem[number within=chapter]{mydef}{Definición}
	{mydefStyle}{def}
	\newtcbtheorem[number within=chapter]{mycor}{Corolario}
	{mycorStyle}{cor}
	\newtcbtheorem[number within=chapter]{mylem}{Lema}
	{mylemStyle}{lem}
	\newtcbtheorem[number within=chapter]{myproposi}{Proposición}
	{myproposiStyle}{proposi}
	\newtcbtheorem[number within=chapter]{myexam}{Ejemplo}
	{myexamStyle}{exam}
	%-------------------------------------------
	% INICIO demostracion
	%-------------------------------------------
	\tcolorboxenvironment{proof}{%'proof'from'amsthm'
		blanker,
		breakable,
		left=5mm,
		before skip=10pt,
		after skip=10pt,
		borderline west={1mm}{0pt}{titleProof}
	}
	%-------------------------------------------
	% FIN demostracion
	%-------------------------------------------
}{%
}
\ifthenelse{\equal{\platformtype}{overleaf}}
{ \newtcbtheorem[number within=chapter]{mytheo}{Teorema}
	{}{theo}
	\newtcbtheorem[number within=chapter]{mydef}{Definición}
	{}{def}
	\newtcbtheorem[number within=chapter]{mycor}{Corolario}
	{}{cor}
	\newtcbtheorem[number within=chapter]{mylem}{Lema}
	{}{lem}
	\newtcbtheorem[number within=chapter]{myproposi}{Proposición}
	{}{proposi}
	\newtcbtheorem[number within=chapter]{myexam}{Ejemplo}
	{}{exam}
}{%
}


