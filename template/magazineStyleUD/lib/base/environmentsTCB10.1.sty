%-----------------ejemplo----
\tcbset{
	myexamStyle/.style={
		empty,
		title=My title,
		attach boxed title to top left=,
		fonttitle=\normalsize\bfseries,
		boxed title style={
			empty,size=minimal,
			toprule=2pt,
			top=4pt,
			overlay={}
		},
		coltitle=textExam,
		parbox=false,
		boxsep=0pt,
		left=0pt,
		right=3mm,
		top=4pt,
		breakable,
		pad at break*=0mm,
		vfill before first,
		overlay unbroken={
			\draw[lineExam,line width=0.02cm]
			([xshift=-0.5pt]frame.south east)--(frame.south west); 
		},
		overlay first={},
		overlay middle={},
		overlay last={
			\draw[lineExam,line width=0.02cm]
			([xshift=-0.5pt]frame.south east)--(frame.south west); 
		},
	}
}
